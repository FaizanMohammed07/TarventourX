  /* ✅ Listing Card - Premium UI */
  .listing-card {
    background: #ffffff;
    border-radius: 15px;
    padding: 15px;
    transition: all 0.3s ease-in-out;
    position: relative;
    overflow: hidden;
    border: none !important;
    animation: fadeInSmooth 0.6s ease-in-out;
  }

  /* ✅ Refined Hover Effect - Smooth & Subtle */
  .listing-card:hover {
    transform: scale(1.03);
    box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.15);
  }

  /* ✅ Image Container - Overlay Effect */
  .card-img-container {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
  }

  /* ✅ Listing Image - Fixed Size */
  .card-img-top {
    border-radius: 15px;
    width: 100%;
    height: 20rem;
    object-fit: cover;
    transition: filter 0.3s ease-in-out; /* Only transition filter, not size */
  }

  /* ✅ Image Hover Effect - Brightness and Filter */
  .listing-card:hover .card-img-top {
    filter: brightness(0.9); /* Reduced brightness on hover */
  }

  /* ✅ Gradient Overlay on Hover */
  .card-img-container::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to top, rgba(0, 0, 0, 0.4), transparent);
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
  }

  .listing-card:hover .card-img-container::before {
    opacity: 1;
  }

  /* ✅ Glassmorphism Price Tag */
  .glass-price-tag {
    position: absolute;
    bottom: 15px;
    right: 15px;
    background: rgba(255, 255, 255, 0.3);
    backdrop-filter: blur(10px);
    padding: 10px 16px;
    border-radius: 10px;
    font-size: 14px;
    font-weight: bold;
    color: #222;
    transition: all 0.3s ease-in-out;
  }

  /* ✅ Price Tag Hover Glow */
  .listing-card:hover .glass-price-tag {
    background: rgba(255, 87, 87, 0.5);
    color: white;
  }

  /* ✅ Wishlist Like Button */
  .like-btn {
    position: absolute;
    top: 15px;
    right: 15px;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(8px);
    padding: 10px;
    border-radius: 50%;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
  }

  .like-btn i {
    font-size: 20px;
    color: #ff4a4a;
    transition: transform 0.3s ease-in-out;
  }

  /* ✅ Like Button Click Animation */
  .like-btn:active i {
    animation: heartBeat 0.4s ease-in-out;
    color: #ff0000;
  }

  /* ✅ Heart Beat Animation */
  @keyframes heartBeat {
    0%,
    100% {
      transform: scale(1);
    }
    50% {
      transform: scale(1.2);
    }
  }

  /* ✅ Card Body - Stylish Text */
  .card-body {
    padding: 12px 0;
    text-align: left;
  }

  /* ✅ Card Text */
  .card-text {
    font-size: 16px;
    font-weight: 500;
    color: #333;
  }

  /* ✅ GST Info */
  .tax-info {
    font-size: 12px;
    color: rgba(255, 87, 87, 0.8);
  }

  /* ✅ Responsive Fixes */
  @media (max-width: 768px) {
    .listing-card {
      padding: 12px;
    }

    .card-img-top {
      height: 15rem;
    }

    .glass-price-tag {
      font-size: 12px;
      padding: 8px 12px;
    }

    .like-btn {
      top: 10px;
      right: 10px;
      padding: 8px;
    }
  }

  @media (max-width: 480px) {
    .listing-card {
      padding: 10px;
    }

    .card-img-top {
