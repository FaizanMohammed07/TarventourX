<% layout("/layouts/boilerplate.ejs") %>
<style>
  /* ✅ Filters Navbar - Glassmorphism + Light Red Theme */
  .filters-navbar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: rgba(255, 87, 87, 0.15); /* Light red pastel */
    backdrop-filter: blur(20px);
    padding: 15px 25px;
    border-radius: 15px;
    box-shadow: 0px 4px 10px rgba(255, 87, 87, 0.2);
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    animation: navbarFadeIn 1s ease-in-out;
  }

  /* ✅ Smooth Fade-in Animation */
  @keyframes navbarFadeIn {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* ✅ Scrollable Filters Container */
  .filters-container {
    display: flex;
    gap: 15px;
    overflow-x: auto;
    scroll-behavior: smooth;
    flex-grow: 1;
    padding: 5px 0;
    scrollbar-width: thin;
    scrollbar-color: #ffaaaa transparent; /* Light Red Scrollbar */
  }

  /* Hide default scrollbar */
  .filters-container::-webkit-scrollbar {
    display: none;
  }

  /* ✅ Filter Items - Hover & Active Effects */
  .filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    padding: 12px;
    min-width: 100px;
    text-align: center;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.2);
    color: #333;
    transition: all 0.3s ease;
    animation: fadeIn 0.5s ease-out;
  }

  /* ✅ Hover Effects - Soft Bounce + Color Change */
  .filter:hover {
    transform: scale(1.07);
    background: rgba(255, 87, 87, 0.3);
    box-shadow: 0px 5px 15px rgba(255, 87, 87, 0.25);
    color: white;
  }

  /* ✅ Active Filter Effect */
  .filter.active {
    background: rgba(255, 87, 87, 0.5);
    transform: scale(1.1);
    color: white;
    animation: pulse 1s infinite alternate;
  }

  /* ✅ Smooth Pulse Effect for Active Filter */
  @keyframes pulse {
    0% {
      box-shadow: 0px 0px 10px rgba(255, 87, 87, 0.3);
    }
    100% {
      box-shadow: 0px 0px 20px rgba(255, 87, 87, 0.6);
    }
  }

  /* ✅ Icon Styles */
  .filter i {
    font-size: 24px;
    margin-bottom: 6px;
  }

  /* ✅ Text Styles */
  .filter p {
    font-size: 14px;
    font-weight: 500;
    color: #222;
  }

  /* ✅ Scroll Buttons */
  .scroll-btn {
    background: rgba(255, 87, 87, 0.3);
    border: none;
    color: white;
    font-size: 20px;
    cursor: pointer;
    padding: 10px;
    border-radius: 50%;
    transition: all 0.3s ease;
  }

  /* ✅ Scroll Button Hover Effect */
  .scroll-btn:hover {
    background: rgba(255, 87, 87, 0.5);
    transform: scale(1.2);
  }

  /* ✅ Tax Toggle Section */
  .tax-toggle {
    display: flex;
    align-items: center;
    gap: 10px;
    color: white;
    font-size: 14px;
  }

  /* ✅ Custom Toggle Switch */
  .switch {
    position: relative;
    display: inline-block;
    width: 34px;
    height: 20px;
  }

  .switch input {
    opacity: 0;
    width: 0;
    height: 0;
  }

  .slider {
    position: absolute;
    cursor: pointer;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: #ccc;
    transition: 0.4s;
    border-radius: 34px;
  }

  .slider:before {
    position: absolute;
    content: "";
    height: 12px;
    width: 12px;
    border-radius: 50%;
    left: 4px;
    bottom: 4px;
    background-color: white;
    transition: 0.4s;
  }

  input:checked + .slider {
    background-color: #ff5757;
  }

  input:checked + .slider:before {
    transform: translateX(14px);
  }

  /* ✅ Fully Responsive Design */
  @media (max-width: 768px) {
    .filters-navbar {
      padding: 12px 20px;
    }

    .filters-container {
      gap: 12px;
    }

    .filter {
      min-width: 80px;
    }

    .filter i {
      font-size: 20px;
    }

    .filter p {
      font-size: 12px;
    }
  }

  @media (max-width: 480px) {
    .filters-navbar {
      padding: 10px 15px;
    }

    .filter {
      min-width: 60px;
      padding: 8px;
    }

    .filter i {
      font-size: 18px;
    }

    .filter p {
      font-size: 10px;
    }
  }

